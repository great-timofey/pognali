{
  "name": "pognali",
  "version": "1.0.0",
  "description": "Repo for training HTML Layout skills based on \"Pognali\" (by http://htmlacademy.ru)",
  "main": "index.js",
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp css",
    "start": "gulp start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/great-timofey/pognali.git"
  },
  "devDependencies": {
    "autoprefixer": "9.5.x",
    "browser-sync": "2.27.x",
    "gulp": "4.0.x",
    "gulp-plumber": "1.2.x",
    "gulp-sourcemaps": "2.6.x",
    "gulp-postcss": "8.0.x",
    "gulp-sass": "4.0.x",
    "@htmlacademy/editorconfig-cli": "1.x",
    "stylelint": "10.1.x",
    "stylelint-config-htmlacademy": "0.1.x"
  },
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "engines": {
    "node": "8.16"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/great-timofey/pognali/issues"
  },
  "homepage": "https://github.com/great-timofey/pognali#readme"
}
